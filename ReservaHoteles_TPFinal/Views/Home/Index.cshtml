@model FiltroReserva
@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home"  asp-action="ObtenerHabitaciones" class=" container" style="margin-top: 1rem">

    <div class="row">

        <div class="mb-3">
            <div class="col-lg-6 col-sm-12">
                <label class="form-label" for="cantidad">Habitacion para cuantos:</label>
                <input asp-for="cantidadPersonas" type="number" id="cantidad" class="form-control" />

            </div>
        </div>

        <div class="mb-3">
            <div class="col-lg-6 col-sm-12">
                <label class="form-label" for="ingreso">Fecha de ingreso:</label>
                <input asp-for="fechaInicio" type="date" id="ingreso" />
            </div>
        </div>

        <div class="mb-3">
            <div class="col-lg-6 col-sm-12">
                <label class="form-label" for="egreso">Fecha de egreso:</label>
                <input asp-for="fechaFinal" type ="date" id="egreso" /> <!-- Validar desde HTML con evento on keyup del ingreso? con el min  -->
            </div>
        </div>

        <div class="mb-3">
            <div class="col-lg-6 col-sm-12">
                <button type="submit" class="btn btn-outline-danger form-control">Buscar habitaciones</button>
            </div>
        </div>
    </div>
 </form>
